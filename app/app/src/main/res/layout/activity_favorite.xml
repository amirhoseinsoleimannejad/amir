<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.amhso.meshope.FavoriteActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#19365E"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView112"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toLeftOf="@+id/imageView"
            android:text="علاقه های شما"

            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/a5" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:background="#F0F0F0"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/border_shadow_box"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/a4" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView114"

                android:layout_alignTop="@+id/imageView2"
                android:layout_marginTop="9dp"
                android:text="@string/qqq1122"
                android:textColor="#122E56"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView114"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView113"


                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:text="@string/qqq113"
                android:textColor="#122E56"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/a100" />

            <View
                android:id="@+id/relativeLayout4"
                android:layout_width="230dp"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="42dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:background="#E2E2E2" />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_shadow_box"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textView118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/qqq1118"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView119"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView118"
                android:layout_centerVertical="true"
                android:text="@string/qqq1119"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView119"
                android:layout_below="@+id/textView119"
                android:text="@string/qqq2000"
                android:textColor="#369128"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView118"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:text="@string/a2"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignTop="@+id/textView119"
                android:text="@string/a3"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignTop="@+id/textView200"
                android:text="@string/a1"
                android:textColor="#369128"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#F0F0F0">
            <Button
                android:id="@+id/button300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="اضافه به سبد خرید"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="#FE6B0B"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
